<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/rojo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewCitaFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Fecha: 25/12/2023"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/blanco" />

        <TextView
            android:id="@+id/textViewCitaNombreCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Cliente: Nombre Apellido"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/blanco" />

        <TextView
            android:id="@+id/textViewCitaTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Teléfono: 123456789"
            android:layout_marginTop="2dp"
            android:textColor="@color/blanco"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textViewCitaCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo: cliente@example.com"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/blanco"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textViewCitaNumeroPersonas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personas: 4"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/blanco"
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textViewCitaPreferencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Preferencias: Cerca de la ventana"
            android:layout_marginTop="8dp"
            android:textColor="@color/blanco"
            android:textAppearance="?attr/textAppearanceBody2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewCitaNotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Notas: Alergia al maní"
            android:textColor="@color/blanco"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:visibility="gone" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
